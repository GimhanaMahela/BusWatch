{
  "installCommand": "npm install --prefix buswatch-frontend && npm install --prefix buswatch-backend",
  "builds": [
    {
      "src": "buswatch-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "buswatch-backend/server.js",
      "use": "@vercel/node",
      "config": {}
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "buswatch-backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "buswatch-frontend/$1"
    }
  ],
